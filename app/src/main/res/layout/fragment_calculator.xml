<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?colorButtonNormal"
    tools:context=".calculator.CalculatorFragment">
    <LinearLayout
        android:layout_margin="2dp"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="?colorOnBackground"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:id="@+id/btnDivide"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textColor="?colorSecondary"
                    android:layout_gravity="center"
                    android:textSize="40sp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:backgroundTint="?colorOnBackground"
                android:id="@+id/btnMultiply"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="?colorSecondary"
                    android:layout_gravity="center"
                    android:textSize="40sp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="?colorOnBackground"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:id="@+id/btnMinus"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="?colorSecondary"
                    android:layout_gravity="center"
                    android:textSize="40sp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:backgroundTint="?colorOnBackground"
                android:id="@+id/btnPlus"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textColor="?colorSecondary"
                    android:layout_gravity="center"
                    android:textSize="40sp"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="?colorOnBackground"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:id="@+id/btn7"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textColor="?colorSecondary"
                    android:layout_gravity="center"
                    android:textSize="40sp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:backgroundTint="?colorOnBackground"
                android:id="@+id/btn8"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textColor="?colorSecondary"
                    android:layout_gravity="center"
                    android:textSize="40sp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="?colorOnBackground"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:id="@+id/btn9"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textColor="?colorSecondary"
                    android:layout_gravity="center"
                    android:textSize="35sp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:backgroundTint="?colorOnBackground"
                android:id="@+id/btnEqual"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="="
                    android:textColor="?colorSecondary"
                    android:layout_gravity="center"
                    android:textSize="40sp"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="?colorOnBackground"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:id="@+id/btn4"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="?colorSecondary"
                    android:layout_gravity="center"
                    android:textSize="40sp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:backgroundTint="?colorOnBackground"
                android:id="@+id/btn5"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="?colorSecondary"
                    android:layout_gravity="center"
                    android:textSize="40sp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="?colorOnBackground"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:id="@+id/btn6"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textColor="?colorSecondary"
                    android:layout_gravity="center"
                    android:textSize="35sp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:backgroundTint="?colorOnBackground"
                android:id="@+id/btnDot"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:textColor="?colorSecondary"
                    android:layout_gravity="center"
                    android:textSize="40sp"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="?colorOnBackground"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:id="@+id/btn1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="?colorSecondary"
                    android:layout_gravity="center"
                    android:textSize="40sp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:backgroundTint="?colorOnBackground"
                android:id="@+id/btn2"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="?colorSecondary"
                    android:layout_gravity="center"
                    android:textSize="40sp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="?colorOnBackground"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:id="@+id/btn3"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="?colorSecondary"
                    android:layout_gravity="center"
                    android:textSize="35sp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:backgroundTint="?colorOnBackground"
                android:id="@+id/btnDel"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:textColor="?colorSecondary"
                    android:layout_gravity="center"
                    android:textSize="40sp"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="?colorButtonNormal"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:id="@+id/btnEmpty"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   "
                    android:layout_gravity="center"
                    android:textSize="40sp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:backgroundTint="?colorOnBackground"
                android:id="@+id/btn0"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="?colorSecondary"
                    android:layout_gravity="center"
                    android:textSize="40sp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="?colorButtonNormal"
                android:padding="5dp"

                android:id="@+id/btnEmpty2"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   "
                    android:textColor="?colorSecondary"
                    android:layout_gravity="center"
                    android:textSize="40sp"
                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:backgroundTint="?colorPrimary"
                android:id="@+id/btnOk"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OK"
                    android:textColor="?colorOnBackground"
                    android:layout_gravity="center"
                    android:textSize="40sp"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>
</layout>